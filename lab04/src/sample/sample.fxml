<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <!-- Top Text -->
    <Text text = "Java FX Sample" GridPane.columnIndex = "0" GridPane.rowIndex = "0"/>
    <Label text = "Username" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label text = "Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label text = "Full Name" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label text = "email" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label text = "Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Label text = "Date of Birth" GridPane.columnIndex="0" GridPane.rowIndex="6" />

    <TextField id = "usernameField" fx:id="usernameField" promptText="USERNAME HERE" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField id = "passwordField" fx:id="passwordField" promptText="PASSWORD HERE" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField id = "nameField" fx:id="nameField" promptText="FULL NAME HERE" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField id = "emailField" fx:id="emailField" promptText="EMAIL HERE" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <TextField id = "PNField" fx:id="PNField" promptText="###-###-####" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <DatePicker id = "datePicker" fx:id="datePicker" promptText="mm/dd/yyyy" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Button id = "enterBtn" fx:id="enterBtn" onAction="#btnOnPress" text = "Register" GridPane.columnIndex="1" GridPane.rowIndex="7" />


</GridPane>